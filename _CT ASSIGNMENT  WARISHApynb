   "source": [
    "#Mode# Mode for grouped data\n",
    "class_intervals = [(15,25), (25,35), (35,45), (45,55), (55,65)]\n",
    "frequencies = [350, 375, 120, 80, 90]\n",
    "\n",
    "# Find modal class (the one with highest frequency)\n",
    "modal_index = frequencies.index(max(frequencies))\n",
    "\n",
    "# Extract values for mode formula\n",
    "l = class_intervals[modal_index][0]       # lower boundary of modal class\n",
    "f1 = frequencies[modal_index]             # frequency of modal class\n",
    "f0 = frequencies[modal_index - 1] if modal_index > 0 else 0   # previous class freq\n",
    "f2 = frequencies[modal_index + 1] if modal_index < len(frequencies)-1 else 0   # next class freq\n",
    "h = class_intervals[modal_index][1] - class_intervals[modal_index][0]          # class width\n",
    "\n",
    "# Mode formula: L + [(f1 - f0) / (2f1 - f0 - f2)] * h\n",
    "mode = l + ((f1 - f0) / (2*f1 - f0 - f2)) * h\n",
    "print(\"Mode=\",round(mode,2))"
   ]
