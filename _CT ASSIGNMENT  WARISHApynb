   ],
   "source": [
    "#Median\n",
    "class_intervals=[(15,25),(25,35),(35,45),(45,55),(55,65)]\n",
    "frequencies=[350,375,120,80,90]\n",
    "# To find cumiluative frequency\n",
    "cf=[]\n",
    "total=0\n",
    "for f in frequencies:\n",
    "     total += f\n",
    "     cf.append(total)\n",
    "# Step 2: Total frequency and N/2\n",
    "N = sum(frequencies)\n",
    "N2 = N / 2\n",
    "\n",
    "# Step 3: Find the median class\n",
    "for i in range(len(cf)):\n",
    "    if cf[i] >= N2:\n",
    "        median_class_index = i\n",
    "        break\n",
    "\n",
    "# Step 4: Extract values\n",
    "L = class_intervals[median_class_index][0]   # lower boundary\n",
    "h = class_intervals[median_class_index][1] - class_intervals[median_class_index][0]  # class width\n",
    "f = frequencies[median_class_index]          # frequency of median class\n",
    "CF = cf[median_class_index - 1] if median_class_index > 0 else 0  # cumulative before median class\n",
    "\n",
    "# Step 5: Apply formula\n",
    "median = L + ((N2 - CF) / f) * h\n",
    "print(\"Median:\", median)\n"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 14,
   "id": "aa79c1eb-10a4-4dfa-925f-88bd010f27a0",
