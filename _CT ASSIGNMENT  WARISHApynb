    "#Question 1 \n",
    "#Mean \n",
    "CI=[(15,25),(25,35),(35,45),(45,55),(55,65)]\n",
    "freq=[350,375,120,80,90]\n",
    "midpoints=[(low+high)/2 for(low,high)in CI]\n",
    "fx=[f*x for f,x in zip(freq ,midpoints)]\n",
    "mean_grouped=sum(fx)/sum(freq)\n",
    "print(\"Mean of grouped data=\",mean_grouped)"
   ]
